@{
    ViewData["PageHeader"] = "Error";
    ViewData["Title"] = "Error";
}

<div class="error-page">
    <h2 class="headline text-warning"> @ViewBag.StatusCode</h2>

    <div class="error-content">
        <h3><i class="fas fa-exclamation-triangle text-warning"></i> Oops! @ViewBag.ErrorMessage.</h3>

        @if (ViewBag.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@ViewBag.RequestId</code>
            </p>
        }

        <p>
            Meanwhile, you may <a asp-controller="Home" asp-action="Index">return to dashboard</a> or try using the search form.
        </p>

        <form class="search-form">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search">

                <div class="input-group-append">
                    <button type="submit" name="submit" class="btn btn-warning">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
            <!-- /.input-group -->
        </form>
    </div>
    <!-- /.error-content -->
</div>
<!-- /.error-page -->
