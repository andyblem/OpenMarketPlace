@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "register-page";
}


<div class="register-box">
  <div class="register-logo">
    <a asp-controller="Home" asp-action="Index">
        <b>Stride3D</b>
        <br>
        Publisher Portal
    </a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
        <p class="login-box-msg">Register a new membership</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        
            <div>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="Name" asp-for="Input.Name" class="form-control" aria-required="true">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user-alt"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="Email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="new-password" aria-required="true">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div>
                <div class="input-group mb-3">
                    <input class="form-control" placeholder="Retype password" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
              <div class="col-12">
                <div class="icheck-primary">
                  <input type="checkbox" id="agreeTerms" asp-for="Input.IsAgreeingToPublisherTermsOfService">
                  <label for="agreeTerms">
                   I agree to the <a asp-controller="Home" asp-action="Privacy">terms</a>
                  </label>
                </div>
                <span asp-validation-for="Input.IsAgreeingToPublisherTermsOfService" class="text-danger"></span>
              </div>
              <!-- /.col -->
            </div>

            <div class="mb-3"></div>

            <div class="row">
              <div class="col-12">
                <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">Register</button>
              </div>
              <!-- /.col -->
            </div>

      </form>

      <div class="mb-3"></div>

      <a asp-page="./Login" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
<!-- /.register-box -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
