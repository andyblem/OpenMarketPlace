@model IEnumerable<Stride3DMarketPlace.Seller.Dtos.AssetDtos.IndexAssetDto>

@{
    ViewData["Title"] = "Assets Overview";
}

<div class="row">

    <!-- /.col -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Assets Overview</h3>

                <div class="card-tools">
                     <a class="btn btn-sm btn-danger" asp-action="Create">Create Asset</a>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IconImagePath)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AssetType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AssetReleaseStateId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LatestVersion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReleasedAt)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IconImagePath)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AssetType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AssetReleaseStateId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LatestVersion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifiedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReleasedAt)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
    <!-- /.card -->
    </div>
<!-- /.col -->

</div>