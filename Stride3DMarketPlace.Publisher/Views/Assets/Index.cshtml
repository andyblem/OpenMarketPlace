@model IEnumerable<Stride3DMarketPlace.Seller.Dtos.AssetDtos.IndexAssetDto>

@{
    ViewData["PageHeader"] = "Assets";
    ViewData["Title"] = "Assets Overview";
}

<div class="row">

    <!-- /.col -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-header" id="accordion">

                <h3 class="card-title">Assets Overview</h3>

                <div class="card-tools">

                    <a class="btn btn-sm">
                        <form class="d-flex form-horizontal" action="/Assets/Search" id="search-asset-form" method="post">
                            <div class="input-group">
                                <input class="form-control form-control-sm" type="search" id="searchAssetInputText" placeholder="Search Asset" aria-label="Search">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fas fa-search"></i>
                                    </span>
                                </div>
                            </div>
                        </form>
                    </a>

                    <a class="btn btn-sm btn-tertiary collapsed" 
                        data-toggle="collapse"
                        href="#collapseOne"
                        title="Filter"
                        data-bs-toggle="tooltip">
                            <i class="fas fa-filter"></i>
                    </a>

                    @*<a class="btn btn-sm btn-tertiary">
                        <i class="fas fa-columns"></i>
                    </a>*@

                    <a class="btn btn-sm btn-danger" 
                        data-toggle="modal" 
                        data-target="#create-asset-modal"
                        title="Filter"
                        data-bs-toggle="tooltip">
                            <i class="fas fa-plus-circle mr-1"></i>
                            Create Asset
                    </a>

                </div>

                <br />

                <div id="collapseOne" class="collapse mt-5" data-parent="#accordion" style="">
                    
                    <form>
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group" id="asset-category-form-group">
                                    <label for="AssetCategoryId" class="control-label">Asset Category</label>
                                    <select class="form-control form-control-lg select2bs4" id="asset-category-id" name="AssetCategoryId" style="width: 100%;">
                                    </select>
                                </div>
                            </div>

                            <div class="col-3">

                                <div class="form-group" id="asset-release-state-form-group">
                                    <label for="AssetReleaseStateId" class="control-label">Asset State</label>
                                    <select class="form-control select2bs4" id="asset-release-state-id" name="AssetReleaseStateId" style="width: 100%;">
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-1 justify-content-end">
                            <button class="btn btn-danger mr-1" type="submit">
                                Apply Filters
                            </button>
                            <button class="btn btn-default" type="reset">
                                Reset
                            </button>
                        </div>

                    </form>
                </div>
            </div>
            <!-- /.card-header -->

            <div class="card-body p-0">

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IconImagePath)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AssetType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AssetReleaseStateId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LatestVersion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedAt)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReleasedAt)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IconImagePath)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AssetType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AssetReleaseStateId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LatestVersion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifiedAt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReleasedAt)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
    <!-- /.card -->
    </div>
<!-- /.col -->

</div>


@section Scripts{
    <script>
        $(function () {

            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl)
            })

            //Initialize Select2 Elements
            $('#asset-category-id').select2({
                allowClear: true,
                placeholder: 'Any',
                theme: 'bootstrap4'
            });
            $('#asset-release-state-id').select2({
                allowClear: true,
                placeholder: 'Any',
                theme: 'bootstrap4'
            });

            // add asset-category options
            var data = @Html.Raw(Json.Serialize(ViewBag.AssetCategories));
            var select = $('#asset-category-id');
            $.each(data, function (index, item) {

                var newOption = new Option(item.text, item.value, false, false);
                select.append(newOption).trigger('change');
            });

            $('#asset-category-id').val(null).trigger('change');

            // add asset-release-state-id options
            var data = @Html.Raw(Json.Serialize(ViewBag.AssetReleaseStates));
            var select = $('#asset-release-state-id');
            $.each(data, function (index, item) {

                var newOption = new Option(item.text, item.value, false, false);
                select.append(newOption).trigger('change');
            });

            $('#asset-release-state-id').val(null).trigger('change');

        });

    </script>
}