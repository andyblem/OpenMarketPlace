@using Microsoft.AspNetCore.Identity;
@using Stride3dMarketplace.Persistance.Managers;
@using Stride3dMarketplace.Persistance.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject ApplicationUserManager<ApplicationUser> UserManager


<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <img class="nav-user-photo" src="~/img/user4-128x128.jpg" alt="User profile picture">
        <span class="user-info">
            <b>@User.Identity.Name</b>
            <small>Wasu Studio</small>
        </span>
        <i class="fas fa-caret-down"></i>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
    
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fas fa-user mr-2"></i>
            Profile
        </a>

        <div class="dropdown-divider"></div>

        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <i class="fas fa-power-off mr-2"></i>
            Logout
        </a>

    </div>
</li>

